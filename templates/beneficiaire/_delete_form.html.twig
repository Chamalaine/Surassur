<form method="post" action="{{ path('beneficiaire_delete', {'id': beneficiaire.id}) }}" onsubmit="return confirm('Êtes-vous sur de vouloir supprimer ce bénéficiaire ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ beneficiaire.id) }}">
    <button class="btn">Supprimer</button>
</form>
