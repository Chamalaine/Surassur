{% extends 'base.html.twig' %}

{% block title %}Souscripteur{% endblock %}

{% block body %}
    <h1>Souscripteur</h1>
     {% for message in app.flashes('success') %}
         <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ souscripteur.nom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ souscripteur.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('souscripteur_index') }}">Retour</a>

    <a href="{{ path('souscripteur_edit', {'id': souscripteur.id}) }}">Editer</a>

    {{ include('souscripteur/_delete_form.html.twig') }}
{% endblock %}
