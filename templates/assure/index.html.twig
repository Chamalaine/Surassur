{% extends 'base.html.twig' %}

{% block title %}Liste Assurés{% endblock %}

{% block body %}
    <h1>Liste Assurés</h1>
    
     {% for message in app.flashes('success') %}
         <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

    <table id="assures" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date de Naissance</th>
                <th>Telephone</th>
                <th>Numero</th>
                <th>Libelle</th>
                <th>Ville</th>
                <th>Cp</th>
                <th>Complement</th>
                <th>Beneficiaires</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for assure in assures %}
            <tr>
                <td>{{ assure.nom }}</td>
                <td>{{ assure.prenom }}</td>
                <td>{{ assure.dateNaissance ? assure.dateNaissance|date('d-m-Y') : '' }}</td>
                <td>{{ assure.telephone }}</td>
                <td>{{ assure.numero }}</td>
                <td>{{ assure.libelle }}</td>
                <td>{{ assure.ville }}</td>
                <td>{{ assure.cp }}</td>
                <td>{{ assure.complement }}</td>
                <td>{{ assure.beneficiaires|length }}</td>
                <td>
                    <a href="{{ path('assure_show', {'id': assure.id}) }}">Détails</a>
                    <a href="{{ path('assure_edit', {'id': assure.id}) }}">Editer</a>      
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Aucun assuré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.js"></script>
    <script>
          $(document).ready(function(){
          $('#assures').DataTable({
              
          });
          });
    </script>
{% endblock %}